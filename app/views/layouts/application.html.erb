<!DOCTYPE html>
<html>
  <head>
    <title>UserManager</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
  </head>

  <body>
    <div class="d-flex flex-row mb-3">
      <div class="p-2">
        <%= button_to destroy_user_session_path, class: "btn btn-primary" , method: :delete do %>
          Logout
        <% end %>
      </div>

      <% if current_user.admin? %>
        <div class="p-2">
          <%= link_to dashboard_path, class: "btn btn-primary" do %>
            Dashboard
          <% end %>
        </div>

        <div class="p-2">
          <%= link_to new_user_administration_path, class: "btn btn-primary" do %>
            New User
          <% end %> 
        </div>
      <% end %> 
    </div>

    <%= yield %>
  </body>
</html>
